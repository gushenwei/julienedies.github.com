{
  "manifest_version": 2,

  "name": "saveToTxt",
  "description": "This extension demonstrates a browser action with kittens.",
  "version": "1.0",

  "permissions": [
  	"tabs",
  	"downloads",  
    "http://*/*"
  ],
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  }
}